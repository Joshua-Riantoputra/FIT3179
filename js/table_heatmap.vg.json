{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "data": {"url": "https://raw.githubusercontent.com/Joshua-Riantoputra/FIT3179/refs/heads/main/data/state_v_socio_HE.csv"},
    "transform": [
      {"fold": [
        "Animal Products",
        "Commercial Services",
        "Construction",
        "Culture and Society",
        "Defence",
        "Economics",
        "Education and Training",
        "Energy",
        "Environment",
        "Environment",
        "Health",
        "Indigenous",
        "Information Services",
        "Law and Politics",
        "Manufacturing",
        "Mineral Resources",
        "Plant Products",
        "Transport",
        "Expanding Knowledge"
      ], "as": ["Field", "Money"]}
    ],
    "mark": "rect",
    "encoding": {
      "x": {"field": "State", "type": "ordinal", "sort":{"op": "average", "field": "Money", "order": "descending"}, "title": ""},
      "y": {"field": "Field", "type": "ordinal", "sort":{"op": "average", "field": "Money", "order": "descending"}, "title": ""},
      "color": {
        "aggregate": "mean", 
        "field": "Money",
        "scale": {"type":  "log"}
      },
      "tooltip": [
        {"field": "State", "type": "nominal"},
        {"field": "Field", "type": "nominal"},
        {"field": "Money", "type": "quantitative", "title": "Spending"}
      ]
    },
    "config": {
      "axis": {"grid": true, "tickBand": "extent"}
    }
  }
  